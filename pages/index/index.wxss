/**index.wxss**/
.container{
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  font-size: 26rpx;
}
.index-list{
  height: 100%;
  position: relative;
}
.lastmsg{
  font-size: 26rpx;
  padding: 20rpx;
  text-align: center;
  color: #666;
}
page{
  height: 100%;
}
/* 头部 */
.yc_header{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0.2);
  z-index: 10000;
  /* height: 174rpx; */
  height: 90rpx;
  padding-top: 20rpx !important;
}
.yc_headerTop{
  height: 60rpx;
  display: flex;
}
.yc_header_kefu{
  width: 82rpx;
  height: 60rpx;  
  background: url(https://cdn.ywart.com/icon/headerKefuB.png) no-repeat center center;
    background-size: 52rpx !important;
}
.yc_header_search{
  flex: 1;
  height: 60rpx;
  background: #f2f2f2;
  border-radius: 8rpx;
}
.yc_header_input{
  box-sizing: border-box;
  display: block;
  width: 100%;
  height: 100%;
  outline: none;
  border: 0;
  background: #f2f2f2;
  padding-left: 20rpx;
  font-size: 28rpx !important;
}
.yc_header_msg{
  width: 82rpx;
  height: 60rpx;  
  background: url(https://cdn.ywart.com/icon/znx.png) no-repeat center center;
    background-size: 52rpx !important;
}

/* 主体内容 */
.yc_center{
  overflow: hidden;
  background: #f8f8f8;
}
/* 轮播图 */
.yc_swiper_wrap{
  overflow: hidden;
  z-index: 1;
  height: 700rpx;
  width: 750rpx;
}
.yc_swiper_swiper{
  width: 100%;
  height: 100%;
}
.slide-image{
  width: 100%;
  height: 100%;
}

/* 热门原创 */
.yc_Hot_original{
  width: 100%;
  padding-top: 60rpx;
}
.yc_box_title{
  width: 100%;
  height: 80rpx;
  text-align: center;
}
.yc_toptitle{
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}
.yc_bottomtitle{
  color: #a4a3a3;
  font-size: 24rpx;
  text-align: center;
  overflow: hidden;
}
.yc_int_img{
  box-shadow:8px 6px 8px #a4a3a3;
}
.yc_hot_img{
  margin-top: 40rpx;
  width: 100%;
}
.yc_hot_img_list{
  width: 85%;
  margin: 0 auto;
  /* border: 1px solid; */
  margin-bottom: 40rpx;
  overflow: hidden;  
}
.yc_info{
  overflow: hidden;
  margin-top: 20rpx;
  float: right;
}
.yc_hot_article{
  float: left;
}
.yc_hot_shu{
  float: left;
  padding: 0 8rpx;
}
.yc_hot_price{
  float: left;
  padding-left: 30rpx;
}